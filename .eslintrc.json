{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended",
        "prettier"
    ],
    "overrides": [
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "react-hooks",
        "prettier"
    ],
    "rules": {
        "react/react-in-jsx-scope": "off",
        "camelcase": "error",
        "spaced-comment": "error",
        "quotes": ["error", "single"],
        "no-duplicate-imports": "error",
        "react/require-default-props": "error",
        "react/display-name": "off"
    },
    "settings": {
        "import/resolver": {
          "alias": {
                "map": [
                    ["@components", "./src/components"],
                    ["@containers", "./src/containers"],
                    ["@scenes", "./src/scenes"],
                    ["@layout", "./src/layout"],
                    ["@theme", "./src/theme"],
                    ["@styles", "./src/styles"],
                    ["@constants", "./src/constants"],
                    ["@routes", "./src/routes"],
                    ["@hoc", "./src/hoc"],
                    ["@assets", "./src/assets"]
                ],
                "extensions": [".js, .scss, .png"]
            }
        }
    }
}
